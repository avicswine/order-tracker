generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Carrier {
  id                 String         @id @default(cuid())
  name               String
  cnpj               String         @unique
  phone              String
  active             Boolean        @default(true)
  trackingSystem     TrackingSystem @default(NONE)
  trackingIdentifier String?
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  orders             Order[]

  @@map("carriers")
}

model Order {
  id                String        @id @default(cuid())
  orderNumber       String        @unique
  customerName      String
  customerEmail     String?
  customerPhone     String?
  carrierId         String?
  carrier           Carrier?      @relation(fields: [carrierId], references: [id])
  status            OrderStatus   @default(PENDING)
  shippedAt         DateTime?
  estimatedDelivery DateTime?
  deliveredAt       DateTime?
  notes             String?
  nfNumber          String?
  nfValue           Float?
  nfIssuedAt        DateTime?
  senderCnpj        String?
  recipientCnpj     String?
  lastTracking      String?
  lastTrackingAt    DateTime?
  trackingEvents    Json?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  statusHistory     StatusHistory[]

  @@index([status])
  @@index([nfNumber])
  @@index([estimatedDelivery, status])
  @@map("orders")
}

model StatusHistory {
  id        String      @id @default(cuid())
  orderId   String
  order     Order       @relation(fields: [orderId], references: [id], onDelete: Cascade)
  status    OrderStatus
  note      String?
  createdAt DateTime    @default(now())

  @@map("status_history")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      UserRole @default(VIEWER)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

enum UserRole {
  ADMIN
  VIEWER
}

enum OrderStatus {
  PENDING
  IN_TRANSIT
  DELIVERED
  CANCELLED
}

enum TrackingSystem {
  SSW
  SENIOR
  PUPPETEER
  SAO_MIGUEL
  ATUAL_CARGAS
  RODONAVES
  BRASPRESS
  NONE
}
